<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/BotãoCard"
        android:layout_width="280dp"
        android:layout_height="100dp"

        android:background="@drawable/rotulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432">

    </Button>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="227dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="Sucesso!"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244">

    </TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:text="2/3 - Criolipólise"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/BotãoCard"
        app:layout_constraintEnd_toEndOf="@+id/BotãoCard"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/BotãoCard"
        app:layout_constraintTop_toTopOf="@+id/BotãoCard"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Luciana - Criolipólise"
        android:textColor="#495151"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/BotãoCard"
        app:layout_constraintEnd_toEndOf="@+id/BotãoCard"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@+id/BotãoCard"
        app:layout_constraintTop_toTopOf="@+id/BotãoCard"
        app:layout_constraintVertical_bias="0.4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/BotãoCard"
        app:layout_constraintEnd_toEndOf="@+id/BotãoCard"
        app:layout_constraintStart_toStartOf="@+id/BotãoCard"
        app:layout_constraintTop_toTopOf="@+id/BotãoCard">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Sessão finalizada e registrada"
            android:textColor="#393E3E"
            android:textSize="15dp"
            android:textStyle="bold"
            android:translationZ="90dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:gravity="left"
        android:text="Status: "
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/BotãoCard"
        app:layout_constraintEnd_toEndOf="@+id/BotãoCard"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="@+id/BotãoCard"
        app:layout_constraintTop_toTopOf="@+id/BotãoCard"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipamento"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criodermes Criopláce Medical 01"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toEndOf="@+id/textView30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586">

    </TextView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/textView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79"
        app:srcCompat="@drawable/ic_baseline_check_circle_outline_24" />

    <Button
        android:id="@+id/Fechar"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_buttom"
        android:text="Fechar"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

</androidx.constraintlayout.widget.ConstraintLayout>